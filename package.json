{
  "name": "@moxiworks/project-vitruvius",
  "version": "0.0.37",
  "description": "Vitruvius Framework by MoxiWorks",
  "main": "index.js",
  "watch": {
    "build:tailwind": {
      "patterns": [
        "src"
      ],
      "extensions": "css",
      "ignore": "src/styles/vitruvius-icons.css",
      "quiet": false,
      "legacyWatch": false,
      "delay": 0,
      "runOnChangeOnly": true
    },
    "build:icons": {
      "patterns": [
        "src"
      ],
      "extensions": "css",
      "ignore": "src/styles/vitruvius.css",
      "quiet": false,
      "legacyWatch": false,
      "delay": 0,
      "runOnChangeOnly": true
    },
    "build:iconsfonts": {
      "patterns": [
        "src"
      ],
      "extensions": "css",
      "ignore": "src/styles/vitruvius.css",
      "quiet": false,
      "legacyWatch": false,
      "delay": 0,
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "dev": "npm-run-all --parallel start:dev watch",
    "start:dev": "webpack-dev-server --host 0.0.0.0",
    "build:tailwind": "postcss ./src/styles/vitruvius.css -o ./dist/vitruvius.css",
    "build:icons": "npx copyfiles -f ./src/styles/vitruvius-icons.css dist",
    "build:iconsfonts": "npx copyfiles -f ./src/styles/fonts/* dist/fonts",
    "build": "NODE_ENV=production webpack --config ./webpack.production.config.js && npm run docs",
    "docs": "./build.sh",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "watch": "npm-watch"
  },
  "author": "JP Given <jgiven@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@open-wc/testing": "^2.3.4",
    "@open-wc/testing-karma": "^3.1.38",
    "autoprefixer": "^9.6.4",
    "copy-webpack-plugin": "^5.0.4",
    "copyfiles": "^2.1.1",
    "css-loader": "^3.2.0",
    "glob": "^7.1.4",
    "lit-element": "^2.2.1",
    "mocha": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "postcss": "^7.0.18",
    "postcss-cli": "^6.1.3",
    "postcss-loader": "^3.0.0",
    "style-loader": "^1.0.0",
    "tailwindcss": "^1.1.2",
    "util": "^0.12.1",
    "vue-script-component": "^0.1.7",
    "watch": "^1.0.2",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "dependencies": {
    "http-server": "^0.11.1",
    "pathwatcher": "^8.1.0"
  }
}
